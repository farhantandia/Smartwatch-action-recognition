<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/har"
            android:background="#ededed"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            tools:context=".MainActivity">

            <TableRow
                android:id="@+id/title_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:textAlignment="center"
                android:background="@android:color/black">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="132dp"
                    android:layout_weight="@integer/complicationDrawable_borderStyle"
                    android:fontFamily="sans-serif-medium"
                    android:text="Activity"
                    android:textAlignment="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!--            <TextView-->
                <!--                android:id="@+id/textView"-->
                <!--                android:layout_weight="@integer/complicationDrawable_borderStyle"-->
                <!--                android:fontFamily="sans-serif-medium"-->
                <!--                android:text="P"-->
                <!--                android:textAlignment="center"-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="15sp"-->
                <!--                android:textStyle="bold" />-->
            </TableRow>
            <TableRow
                android:id="@+id/standing_row"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="0dp">

                <TextView
                    android:id="@+id/standing_title"
                    android:layout_weight="1"
                    android:text="Jumping"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/standing_prob"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/walking_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:id="@+id/walking_title"
                    android:layout_weight="1"
                    android:text="Falling"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/walking_prob"

                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>


            <TableRow
                android:id="@+id/jumping_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:id="@+id/jumping_title"
                    android:layout_weight="1"
                    android:text="Standing"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumping_prob"

                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/falling_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:id="@+id/falling_title"
                    android:layout_weight="1"
                    android:text="Walking"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/falling_prob"

                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/har"
            android:orientation="horizontal"
            android:layout_marginLeft="90dp"

            android:id="@+id/userid">
            <EditText
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:inputType="number"
                android:textColorHint="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:hint="User ID"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userid"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:id="@+id/Stat">

            <TextView
                android:id="@+id/statustit"
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>
        <Button
            android:id="@+id/Record"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="125dp"
            android:layout_below="@id/userid"
            android:text="Record"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:enabled="false"/>

        <Button
            android:id="@+id/Save"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="134dp"
            android:layout_below="@id/Record"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="Save"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Stat"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:id="@+id/hr">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/Save"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/hr" />
            <TextView
                android:id="@+id/heart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="- -"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/bpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/measure"
            android:layout_below="@id/hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Measuring..."
            android:textColor="@color/light_grey"
            android:textSize="12dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/hr"
            android:text="Made by Farhan Tandia"
            android:textSize="11sp"
            android:textColor="@color/light_grey"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</ScrollView>